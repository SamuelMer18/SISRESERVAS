@model SISRESERVAS.Models.usuario;
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_nuevolayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Registrar Usuario
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input class="form-control" asp-for="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apellido"></label>
                    <input class="form-control" asp-for="Apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Edad"></label>
                    <input type="number" class="form-control" asp-for="Edad" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo"></label>
                    <input type="email"class="form-control" asp-for="Correo" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contraseña"></label>
                    <input type="password"class="form-control" asp-for="Contraseña" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-action="Login">Cancelar y regresar</a>
                </div><br><br>
                 @if(TempData["mensaje"] != null)
{
                 <div class="alert alert-success" role="alert">
                     <p>@TempData["mensaje"]</p>
                 </div>
                 <script>
                  setTimeout(function() {
                  $('.alert').fadeOut('slow');
                  }, 5000);
                 </script>
}


            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }