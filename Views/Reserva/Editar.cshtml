@model SISRESERVAS.Models.reserva
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>
<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdRes" />

    <div class="form-group">
        <label asp-for="FechaReserva" class="control-label"></label>
        <input asp-for="FechaReserva" class="form-control" />
        <span asp-validation-for="FechaReserva" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="departamentoIdDep" class="control-label"></label>
        <select asp-for="departamentoIdDep" class="form-control" asp-items="ViewBag.IdDep"></select>
        <span asp-validation-for="departamentoIdDep" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="busidbus" class="control-label"></label>
        <select asp-for="busidbus" class="form-control" asp-items="ViewBag.idbus"></select>
        <span asp-validation-for="busidbus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="choferIdchofer" class="control-label"></label>
        <select asp-for="choferIdchofer" class="form-control" asp-items="ViewBag.Idchofer"></select>
        <span asp-validation-for="choferIdchofer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>
<div> <a asp-action="Index">Volver a la lista de reservas</a> </div>